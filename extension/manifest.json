{
  "manifest_version": 3,
  "name": "ZenShield",
  "version": "1.0.0",
  "description": "Anti-cyberbullying shield for content creators",
  "permissions": ["storage", "activeTab", "tabs"],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*",
    "https://www.instagram.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://x.com/*",
        "https://www.instagram.com/*"
      ],
      "js": ["src/content/index.tsx"],
      "run_at": "document_end"
    }
  ]
}
